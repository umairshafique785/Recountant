	$(document).ready(function () {
		handlevalidation();
		LoadProjectDDL();



	$("#Project").change(function () {
		
		var Phase = $(this).val();
		
		$.ajax({
			type: "POST",
			cache: false,
			url: "/Plot/LoadPhaseDDL?id=" + Phase,
