						$el.append($("<option></option>")
							.attr("value", sch[i].Id).text(sch[i].Phase_Code));
					}
				}
				else {
					$el.append($("<option></option>")
						.attr("value", '').text('Select'));
				}
			}
		});

	});

	$("#Phase").change(function () {

		var Id = $(this).val();
	
		$.ajax({
			type: "POST",
			cache: false,
			url: "/Plot/LoadBlockDDL?id=" + Id,
